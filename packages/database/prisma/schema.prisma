// MAPATUR - Sistema Guia de Turismo de Corumbá (MS)
// Prisma Schema Definition

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// PRODUCTION TABLES - Dados limpos e validados
// ============================================================================

model PROD_Escola {
  id                     Int                           @id @default(autoincrement())
  nome                   String                        @db.VarChar(255)
  endereco               String?                       @db.VarChar(500)
  id_bairro              Int?                          // Referência ao bairro
  latitude               Decimal                       @db.Decimal(10, 8) // NOT NULL - obrigatório para mapa
  longitude              Decimal                       @db.Decimal(11, 8) // NOT NULL - obrigatório para mapa
  telefone               String?                       @db.VarChar(100)
  whatsapp               String?                       @db.VarChar(100)
  email                  String?                       @db.VarChar(255)
  diretor_responsavel    String?                       @db.VarChar(255)
  horario_funcionamento  String?                       @db.Text
  imagem_url             String?                       @db.VarChar(500)
  icone_url              String?                       @db.VarChar(500)
  laboratorio_informatica Boolean                      @default(false)
  laboratorio_info       String?                       @db.Text
  ativo                  Boolean                       @default(true)
  created_at             DateTime                      @default(now())
  updated_at             DateTime                      @updatedAt

  // Relações
  bairro                 PROD_Bairro?                  @relation(fields: [id_bairro], references: [id], onDelete: SetNull)
  professores            Junction_Escola_Professor[]
  redes_sociais          PROD_Escola_RedeSocial[]
  ofertas_ensino         Junction_Escola_OfertaEnsino[]

  @@index([ativo])
  @@index([latitude, longitude])
  @@index([laboratorio_informatica])
  @@index([id_bairro])
  @@map("prod_escola")
}

model PROD_Professor {
  id                Int                              @id @default(autoincrement())
  nome              String                           @db.VarChar(255)
  cpf               String?                          @db.VarChar(14)
  matricula         String?                          @db.VarChar(20)
  cargo             String?                          @db.VarChar(100) // Diretor, Coordenador Pedagógico, Diretor de Ensino, etc.
  ativo             Boolean                          @default(true)
  created_at        DateTime                         @default(now())
  updated_at        DateTime                         @updatedAt

  // Relações
  escolas           Junction_Escola_Professor[]

  @@index([ativo])
  @@index([cpf])
  @@index([cargo])
  @@map("prod_professor")
}

model PROD_Escola_RedeSocial {
  id          Int                 @id @default(autoincrement())
  id_escola   Int
  nome_rede   String              @db.VarChar(50)
  url_perfil  String              @db.VarChar(500)
  created_at  DateTime            @default(now())
  updated_at  DateTime            @updatedAt

  escola      PROD_Escola         @relation(fields: [id_escola], references: [id], onDelete: Cascade)

  @@index([id_escola])
  @@map("prod_escola_redesocial")
}

// ============================================================================
// JUNCTION TABLES - Relações N:N
// ============================================================================

model Junction_Escola_Professor {
  id_escola         Int
  id_professor      Int
  created_at        DateTime                         @default(now())

  escola            PROD_Escola                      @relation(fields: [id_escola], references: [id], onDelete: Cascade)
  professor         PROD_Professor                   @relation(fields: [id_professor], references: [id], onDelete: Cascade)

  @@id([id_escola, id_professor])
  @@index([id_escola])
  @@index([id_professor])
  @@map("junction_escola_professor")
}

model Junction_Escola_OfertaEnsino {
  id_escola         Int
  id_oferta_ensino  Int
  created_at        DateTime                         @default(now())

  escola            PROD_Escola                      @relation(fields: [id_escola], references: [id], onDelete: Cascade)
  oferta_ensino     PROD_OfertaEnsino                @relation(fields: [id_oferta_ensino], references: [id], onDelete: Cascade)

  @@id([id_escola, id_oferta_ensino])
  @@index([id_escola])
  @@index([id_oferta_ensino])
  @@map("junction_escola_oferta_ensino")
}

// ============================================================================
// USER MANAGEMENT - Sistema de usuários e RBAC
// ============================================================================

model User {
  id                Int                              @id @default(autoincrement())
  username          String                           @unique @db.VarChar(50)
  email             String                           @unique @db.VarChar(255)
  password_hash     String                           @db.VarChar(255)
  role              UserRole                         @default(admin)
  ativo             Boolean                          @default(true)
  created_at        DateTime                         @default(now())
  updated_at        DateTime                         @updatedAt
  last_login        DateTime?

  // Relações
  audit_logs        AUDIT_LOG[]

  @@index([username])
  @@index([email])
  @@index([role])
  @@map("user")
}

enum UserRole {
  admin
  superadmin
}

// ============================================================================
// AUDIT SYSTEM - Sistema de auditoria imutável
// ============================================================================

model AUDIT_LOG {
  id                Int                              @id @default(autoincrement())
  tabela            String                           @db.VarChar(100)
  operacao          OperacaoAudit
  registro_id       Int
  valor_antigo      String?                          @db.Text // JSON
  valor_novo        String?                          @db.Text // JSON
  user_id           Int?
  correlation_id    String?                          @db.VarChar(100)
  timestamp         DateTime                         @default(now())

  // Relações
  user              User?                            @relation(fields: [user_id], references: [id], onDelete: SetNull)

  @@index([tabela])
  @@index([operacao])
  @@index([user_id])
  @@index([timestamp])
  @@index([correlation_id])
  @@map("audit_log")
}

enum OperacaoAudit {
  INSERT
  UPDATE
  DELETE
}

// ============================================================================
// BAIRROS - Gerenciamento de bairros de Corumbá
// ============================================================================

model PROD_Bairro {
  id         Int           @id @default(autoincrement())
  nome       String        @unique @db.VarChar(100)
  ativo      Boolean       @default(true)
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt

  // Relações
  escolas    PROD_Escola[]

  @@index([nome])
  @@index([ativo])
  @@map("prod_bairro")
}

// ============================================================================
// ÍCONES - Gerenciamento de ícones para tipos de escolas
// ============================================================================

model PROD_Icone {
  id         Int      @id @default(autoincrement())
  nome       String   @unique @db.VarChar(100) // Ex: Integral, Fundamental, Creche
  url        String   @db.VarChar(500)
  ativo      Boolean  @default(true)
  ordem      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([ativo])
  @@index([ordem])
  @@map("prod_icone")
}

// ============================================================================
// OFERTAS DE ENSINO - Tipos de ensino oferecidos pelas escolas
// ============================================================================

model PROD_OfertaEnsino {
  id         Int                                @id @default(autoincrement())
  nome       String                             @unique @db.VarChar(100) // Ex: Infantil, Fundamental I, Fundamental II, Médio, EJA
  ativo      Boolean                            @default(true)
  created_at DateTime                           @default(now())
  updated_at DateTime                           @updatedAt

  // Relações
  escolas    Junction_Escola_OfertaEnsino[]

  @@index([nome])
  @@index([ativo])
  @@map("prod_oferta_ensino")
}
